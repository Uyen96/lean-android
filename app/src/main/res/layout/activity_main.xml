<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_add_address"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Nhập địa chỉ" />
        <Button
            android:id="@+id/bt_search"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            />
    </LinearLayout>
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Tên thành phố :"
        android:id="@+id/tv_city_name"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBack"

        />
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Tên quốc gia :"
        android:id="@+id/tv_country_name"
        android:textSize="25dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/colorBack"
        />
    <ImageView
        android:id="@+id/im_item"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_temperature"
        android:layout_marginTop="2dp"
        android:text="Nhiệt độ"
        android:textColor="@color/colorRed"
        android:textSize="35dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tv_status"
        android:text="Trạng thái"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:textColor="@color/colorBack"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Độ ẩm"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:textColor="@color/colorRed"/>
            <TextView
                android:id="@+id/tv_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Độ ẩm"
                android:textSize="25dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mây"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:textColor="@color/colorRed"/>
            <TextView
                android:id="@+id/tv_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mây"
                android:textSize="25dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tốc độ gió"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:textColor="@color/colorRed"/>
            <TextView
                android:id="@+id/tv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tốc độ gió"
                android:textSize="25dp"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/tv_update_day"
        android:text="Ngày cập nhật"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/bt_next_day"
        android:textColor="@color/colorBack"
        android:text="Các ngày tiếp theo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>